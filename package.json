{
  "name": "expandable-node",
  "version": "1.0.1",
  "description": "A library for creating a tree like node structure.",
  "main": "dist/js/expandable-node.umd.min.js",
  "module": "dist/js/expandable-node.es5.min.js",
  "typings": "dist/types/expandable-node.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkolodiy/expandable-node.git"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "expandable",
    "node"
  ],
  "scripts": {
    "prebuild": "run-s clean fix",
    "build": "rollup -c rollup.config.ts",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest --no-cache",
    "watch": "run-s clean build && run-p \"build -- -w\" \"test:unit -- --watch\"",
    "cov": "run-s build test:unit -- --coverage && opn coverage/index.html",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "clean": "trash dist test coverage",
    "prepare-release": "run-s test cov:check doc:html version doc:publish"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "materialize-css": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/materialize-css": "^1.0.6",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^2.0.1",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "opn-cli": "^4.0.0",
    "postcss-banner": "^3.0.1",
    "postcss-inline-svg": "^4.1.0",
    "prettier": "^1.15.2",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-license": "^0.11.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "standard-version": "^4.4.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-immutable": "^5.0.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.1.6"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "<rootDir>/__test__"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  }
}
